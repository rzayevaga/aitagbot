{
    "name": "aiTag - bot",
    "description": "Powerful Telegram bot to get everyone's attention by mentioning all members in the chat. AiTag bot has some additional cool features and also it can work in channels. It's easy, fast and self deployable.",
    "repository": "https://www.rzayev.iblogger.org/news/bl-content/uploads/pages/a638e2925a09a95d1758f4238bfcfe01/IMG_20240611_174004_587.jpg",
    "logo": "https://github.com/rzayevaga/aitagbot/blob/main/aitagbot.png",
    "keywords": [
        "Ai-Tag bot",
        "mention all bot",
        "notify all bot",
        "tag all bot",
        "everyone bot",
        "Telegram bot",
        "Pyrogram bot"
    ],
    "env": {
        "API_ID": {
            "description": "Get from my.telegram.org/apps",
            "required": true
        },
        "API_HASH": {
            "description": "Get from my.telegram.org/apps",
            "required": true
        },
        "BOT_TOKEN": {
            "description": "Get from Telegram's @BotFather",
            "required": true
        }
    },
    "formation": {
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  },
    "buildpacks": [
        {
            "url": "heroku/python"
        }
    ]
}
